{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "visualizer",
      "image": "rotendahl/bolius",
      "essential": true,
      "memoryReservation": 5,
      "links": ["database", "redis"],
      "portMappings": [{ "containerPort": 8000, "hostPort": 8000 }],
      "mountPoints": [
        {
          "sourceVolume": "scratch_storage",
          "containerPath": "/tmp"
        }
      ],
      "dependsOn": [
        {
          "containerName": "database",
          "condition": "START"
        },
        {
          "containerName": "redis",
          "condition": "START"
        }
      ],
      "environment": [
        {
          "name": "ADMINS",
          "value": "[('Benjamin Rotendahl', 'Benjamin@Rotendahl.dk')]"
        },
        {
          "name": "MANAGERS",
          "value": "[('Benjamin Rotendahl', 'Benjamin@Rotendahl.dk')]"
        }
      ]
    },
    {
      "name": "nginx",
      "image": "rotendahl/visualizer_nginx",
      "links": ["visualizer"],
      "memoryReservation": 5,
      "portMappings": [{ "containerPort": 80, "hostPort": 80 }],
      "dependsOn": [
        {
          "containerName": "visualizer",
          "condition": "START"
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis:6",
      "memoryReservation": 5,
      "portMappings": [{ "containerPort": 6379 }]
    },
    {
      "name": "database",
      "image": "postgis/postgis:12-master",
      "memoryReservation": 5,
      "essential": true,
      "portMappings": [{ "containerPort": 5432, "hostPort": 5432 }],
      "environment": [{ "name": "POSTGRES_DB", "value": "data_manager" }],
      "mountPoints": [
        {
          "sourceVolume": "postgres_efs_volume",
          "containerPath": "/var/lib/postgresql/data/"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "postgres_efs_volume",
      "host": { "sourcePath": "/efs" }
    },
    {
      "name": "scratch_storage",
      "host": { "sourcePath": "/tmp" }
    }
  ]
}
