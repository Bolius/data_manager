{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "data_manager",
      "image": "rotendahl/bolius",
      "essential": true,
      "memoryReservation": 5,
      "links": ["database"],
      "portMappings": [{ "hostPort": 80, "containerPort": 80 }],
      "dependsOn": [
        {
          "containerName": "database",
          "condition": "START"
        }
      ],
      "environment": [
        {
          "name": "ADMINS",
          "value": "[('Benjamin Rotendahl', 'Benjamin@Rotendahl.dk')]"
        },
        {
          "name": "MANAGERS",
          "value": "[('Benjamin Rotendahl', 'Benjamin@Rotendahl.dk')]"
        },
        { "name": "ALLOWED_HOSTS", "value": "[\"*\"]" }
      ]
    },
    {
      "name": "database",
      "image": "postgis/postgis:12-master",
      "memoryReservation": 5,
      "essential": true,
      "portMappings": [{ "hostPort": 5432, "containerPort": 5432 }],
      "environment": [{ "name": "POSTGRES_DB", "value": "data_manager" }],
      "mountPoints": [
        {
          "sourceVolume": "postgres_efs_volume",
          "containerPath": "/var/lib/postgresql/data/"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "postgres_efs_volume",
      "host": { "sourcePath": "/efs" }
    }
  ]
}
