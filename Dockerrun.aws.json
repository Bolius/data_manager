{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "data_manager",
      "image": "rotendahl/bolius",
      "essential": true,
      "memoryReservation": 5,
      "links": ["database"],
      "portMappings": [{ "containerPort": 8000, "hostPort": 8000 }],
      "mountPoints": [
        {
          "sourceVolume": "scratch_storage",
          "containerPath": "/tmp"
        }
      ],
      "dependsOn": [
        {
          "containerName": "database",
          "condition": "START"
        }
      ],
      "environment": [
        {
          "name": "ADMINS",
          "value": "[('Benjamin Rotendahl', 'Benjamin@Rotendahl.dk')]"
        },
        {
          "name": "MANAGERS",
          "value": "[('Benjamin Rotendahl', 'Benjamin@Rotendahl.dk')]"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f 0.0.0.0:8000 || exit 1"],
        "interval": 30,
        "timeout": 30,
        "retries": 5,
        "startPeriod": 120
      }
    },
    {
      "name": "nginx",
      "image": "rotendahl/visualizer_nginx",
      "links": ["data_manager"],
      "memoryReservation": 5,
      "portMappings": [{ "containerPort": 80, "hostPort": 80 }],
      "dependsOn": [
        {
          "containerName": "data_manager",
          "condition": "HEALTHY"
        }
      ]
    },
    {
      "name": "database",
      "image": "postgis/postgis:12-master",
      "memoryReservation": 5,
      "essential": true,
      "portMappings": [{ "containerPort": 5432 }],
      "environment": [{ "name": "POSTGRES_DB", "value": "data_manager" }],
      "mountPoints": [
        {
          "sourceVolume": "postgres_efs_volume",
          "containerPath": "/var/lib/postgresql/data/"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "postgres_efs_volume",
      "host": { "sourcePath": "/efs" }
    },
    {
      "name": "scratch_storage",
      "host": { "sourcePath": "/tmp" }
    }
  ]
}
